<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ControlActivity">


    <ToggleButton
        android:id="@+id/toggleButtonBackward"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:width="100dp"
        android:height="100dp"
        android:background="@drawable/oval_button"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:onClick="onclickBackward"
        android:text="ToggleButton"
        android:textOff="BACKWARD"
        android:textOn="BACKWARD"
        app:layout_constraintStart_toStartOf="@+id/toggleButtonStop"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonStop" />

    <ToggleButton
        android:id="@+id/toggleButtonLeft"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:width="100dp"
        android:height="100dp"
        android:background="@drawable/oval_button"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:onClick="onclickLeft"
        android:text="ToggleButton"
        android:textOff="LEFT"
        android:textOn="LEFT"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButtonStop"
        app:layout_constraintEnd_toStartOf="@+id/toggleButtonStop" />

    <ToggleButton
        android:id="@+id/toggleButtonForward"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:width="100dp"
        android:height="100dp"
        android:background="@drawable/oval_button"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:onClick="onclickForward"
        android:text="ToggleButton"
        android:textOff="FORWARD"
        android:textOn="FORWARD"
        app:layout_constraintBottom_toTopOf="@+id/toggleButtonStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ToggleButton
        android:id="@+id/toggleButtonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:width="60dp"
        android:height="60dp"
        android:background="@drawable/oval_button"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:onClick="onclickStop"
        android:text="ToggleButton"
        android:textOff="STOP"
        android:textOn="STOP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toggleButtonForward"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ToggleButton
        android:id="@+id/toggleButtonRight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:width="60dp"
        android:height="60dp"
        android:background="@drawable/oval_button"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:onClick="onclickRight"
        android:text="ToggleButton"
        android:textOff="RIGHT"
        android:textOn="RIGHT"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButtonStop"
        app:layout_constraintStart_toEndOf="@+id/toggleButtonStop" />


</android.support.constraint.ConstraintLayout>